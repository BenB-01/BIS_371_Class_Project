def submitted_data_find():
  display_textbox.delete("1.0", tk.END)
  try:
    cursor.execute("SELECT Activity_date, Paper_title FROM Activity, Paper WHERE Activity_type = 1 ORDER BY Activity_date")
  except Exception as err:
      print("There was an issue executing the submitted query.", err)
  rows = cursor.fetchall()
  for row in rows:
    display_textbox.insert("1.0", ("Submitted: " + row.Paper_title + " Date: " '{:%Y-%m-%d}'.format(row.Activity_date) + '\n'))
    
